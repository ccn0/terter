{
    "manifest_version": 2,
    "name": "Terter",
    "description": "Replace the HTML that loads on websites!",
    "version": "0.1.3",
    "icons": {
        "500": "assets/tertericon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["background.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "500": "assets/tertericon.png"
        }
    }
}
