{
    "manifest_version": 3,
    "name": "Terter",
    "description": "Replace the HTML that loads in URLs!",
    "version": "0.1.1",
    "icons": {
        "1024": "assets/tertericon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["background.js"]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "1024": "assets/tertericon.png"
      }
    }
}
