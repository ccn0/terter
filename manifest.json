{
    "manifest_version": 3,
    "name": "Peardeck Pro",
    "description": "Unlock the full capability of pears!",
    "version": "1.0",
    "icons": {
      "1024": "assets/peardeck.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],
    "browser_action": {
      "default_icon": "assets/peardeck.png",
      "default_popup": "popup.html"
    }
}