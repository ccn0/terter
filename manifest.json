{
    "manifest_version": 3,
    "name": "Peardeck Pro",
    "description": "Unlock the full capability of pears!",
    "version": "1.0",
    "icons": {
        "1024": "assets/peardeck.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
        "1024": "assets/peardeck.png"
        }
    }
}
