{
    "manifest_version": 3,
    "name": "Peardeck Pro",
    "description": "Unlock the full capability of pears!",
    "version": "1.0",
    "icons": {
        "1024": "assets/peardeck.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["background.js"]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "webNavigation",
        "webRequest"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
        "1024": "assets/peardeck.png"
        }
    }
}
